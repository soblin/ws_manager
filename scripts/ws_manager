#!/bin/bash

# (1) argparse
ARGPARSE=$(getopt -o '' --long info,clear:,reinit: -- "$@")
if [[ $? -ne 0 ]]; then
    exit 1;
fi
eval set -- "$ARGPARSE"
while [ : ]; do
    case "$1" in
        --info)
            cmd="info"
            path="None"
            break
            ;;
        --clear)
            cmd="clear"
            path=$2
            break
            ;;
        --reinit)
            cmd="reinit"
            path=$2
            break
            ;;
        --)
            echo "Usage: ros2 run ws_manager ws_manager --info or --{clear, reinit} <ws_path>"
            exit
            ;;
    esac
done

if [[ ${cmd} == "info" ]]; then
    colcon_prefix_path=`printenv COLCON_PREFIX_PATH`
    echo "COLCON_PREFIX_PATH = ${colcon_prefix_path}"
    exit
fi

# (3) get abs path to <ws_dir>
# (.1) if path[0] == "/" (abspath)
if [[ ${path:0:1} == "/" ]]; then
    ws_path=${path}
else
    cwd=$(pwd)
    ws_path="${cwd}/${path}"
fi
# (.2) regularize '..' in <ws_path>
ws_path=`realpath ${ws_path}`

# (4) do checking
# (.1) <ws_dir>/install is assumed to exist
install_path="${ws_path}/install"
if [ ! -d $install_path ]; then
    exit 1
fi

# (5) check ENV_VAR existance
declare -a ENV_VARS_LIST=("LD_LIBRARY_PATH" "PYTHONPATH" "CMAKE_PREFIX_PATH" "COLCON_PREFIX_PATH" "AMENT_PREFIX_PATH" "GAZEBO_MODEL_PATH")
env_vars=()
for ENV_VAR in ${ENV_VARS_LIST[@]}; do
    if [[ "${ENV_VAR}" ]]; then
        env_vars=("${env_vars[@]}" ${ENV_VAR})
    fi
done

# (6) get the value
declare -A cur_env_values
declare -A reset_env_values
for env_var in ${env_vars[@]}; do
    value=`printenv ${env_var}`
    if [[ "${value}" ]]; then
        # (.1) separate by ':' and store as lists
        splits=(${value//:/ })
        cur_env_values[${env_var}]=${splits[@]}
        # (.2) exclude item that contains <ws_path>
        resets=()
        for split in ${splits[@]}; do
            if [[ "$split" != *"$ws_path"* ]]; then
                resets=("${resets[@]}" ${split})
            fi
        done
        # (.3) if resets() is not empty
        if (( ${#resets[@]} )); then
            reset_env_values[${env_var}]=${resets[@]}
        fi
    fi
done

# (7) convert [path1 path2 ...] to "path1:path2:..."
for env_var in "${!reset_env_values[@]}"; do
    lists=${reset_env_values[${env_var}]}
    lists_str=""
    i=0
    for list in ${lists[@]}; do
        if [[ $i == 0 ]]; then
            lists_str="${lists_str}${list}"
        else
            lists_str="${lists_str}:${list}"
        fi
        let i++
    done
    reset_env_values[${env_var}]=${lists_str}
done

# (8) print command to pass to bash
command=""
i=0
for env_var in "${!reset_env_values[@]}"; do
    if [[ $i == 0 ]]; then
        command="export ${env_var}=\"${reset_env_values[${env_var}]}\""
    else
        command="${command} && export ${env_var}=\"${reset_env_values[${env_var}]}\""
    fi
    let i++;
done
echo "${command}"
